							"var schema = {\r",
							"  \"$schema\": \"http://json-schema.org/draft-04/schema#\",\r",
							"  \"type\": \"object\",\r",
							"  \"properties\": {\r",
							"    \"person\": {\r",
							"      \"type\": \"object\",\r",
							"      \"properties\": {\r",
							"        \"u_age\": {\r",
							"          \"type\": \"integer\"\r",
							"        },\r",
							"        \"u_name\": {\r",
							"          \"type\": \"array\",\r",
							"          \"items\": [\r",
							"            {\r",
							"              \"type\": \"string\"\r",
							"            },\r",
							"            {\r",
							"              \"type\": \"integer\"\r",
							"            },\r",
							"            {\r",
							"              \"type\": \"integer\"\r",
							"            }\r",
							"          ]\r",
							"        },\r",
							"        \"u_salary_1_5_year\": {\r",
							"          \"type\": \"integer\"\r",
							"        }\r",
							"      },\r",
							"      \"required\": [\r",
							"        \"u_age\",\r",
							"        \"u_name\",\r",
							"        \"u_salary_1_5_year\"\r",
							"      ]\r",
							"    },\r",
							"    \"qa_salary_after_12_months\": {\r",
							"      \"type\": \"number\"\r",
							"    },\r",
							"    \"qa_salary_after_6_months\": {\r",
							"      \"type\": \"integer\"\r",
							"    },\r",
							"    \"start_qa_salary\": {\r",
							"      \"type\": \"integer\"\r",
							"    }\r",
							"  },\r",
							"  \"required\": [\r",
							"    \"person\",\r",
							"    \"qa_salary_after_12_months\",\r",
							"    \"qa_salary_after_6_months\",\r",
							"    \"start_qa_salary\"\r",
							"  ]\r",
							"};\r",
							"\r",
							"pm.test(\"Schema is valid\", function (){\r",
							"    pm.expect(tv4.validate(responseJson, schema)).to.be.true;\r",
							"    \r",
							"});\r",
							"\r",
							"var requestJson = JSON.parse(request.data);\r",
							"\r",
							"pm.test(\"The coefficient for the salary after 6 months is 2\", function () {\r",
							"    pm.expect(responseJson.qa_salary_after_6_months).to.eql(requestJson.salary*2);\r",
							"});\r",
							"\r",
							"pm.test(\"The coefficient for the salary after 12 months is 2.9\", function () {\r",
							"    pm.expect(responseJson.qa_salary_after_12_months).to.eql(requestJson.salary*2.9);\r",
							"});\r",
							"\r",
							"pm.test(\"The coefficient for the salary after 1.5 year is 4\", function () {\r",
							"    pm.expect(responseJson.person.u_salary_1_5_year).to.eql(requestJson.salary*4);\r",
							"});\r",
							"\r",
							"pm.environment.set(\"salary\", responseJson.person.u_salary_1_5_year);"
						],
						"type": "text/javascript"
					}
				}
